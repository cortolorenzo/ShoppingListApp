<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/cv_meal_item"
    app:cardBackgroundColor="@color/whiteOpacity90">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp">

    <TextView
        android:id="@+id/text_view_prority_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        />
    <TextView
        android:id="@+id/text_view_title_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:layout_toStartOf="@+id/text_view_prority_meal"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_view_description_meal"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title_meal"
        android:text="Description"
        android:ellipsize="end"
        android:singleLine="true"/>


</RelativeLayout>


</androidx.cardview.widget.CardView>