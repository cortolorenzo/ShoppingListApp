<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:id="@+id/cv_meal_item_schedule"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/whiteOpacity90">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp">


    <TextView
        android:id="@+id/text_view_title_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:layout_toStartOf="@+id/cv_qnt_meal_decrs"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="true"/>


        <androidx.cardview.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/cv_qnt_meal_decrs"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/text_view_quantity_meal"
            android:layout_width="wrap_content">


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

                android:background="@drawable/ic_baseline_arrow_left_24"



            ></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_quantity_meal"
            android:layout_width="25dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:layout_toStartOf="@id/cv_qnt_meal_incrs"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:text="10"
            android:ellipsize="end"
            android:singleLine="true"/>

        <androidx.cardview.widget.CardView

            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:id="@+id/cv_qnt_meal_incrs"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_width="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_arrow_right_24"



                ></ImageView>

        </androidx.cardview.widget.CardView>


</RelativeLayout>


</androidx.cardview.widget.CardView>